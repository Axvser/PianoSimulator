<local:VisualUnitControlBase x:Class="PianoSimulator.EditVisualComponent.SectionVisual"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PianoSimulator.EditVisualComponent"
             mc:Ignorable="d"
             Height="360">
    <Border>
        <Grid>
            <Border ClipToBounds="True">
                <ScrollViewer Margin="0,0,-20,0">
                    <StackPanel x:Name="Tracks" Orientation="Vertical">
                        <local:TrackVisual Grid.Column="0"/>
                        <local:TrackVisual Grid.Column="1"/>
                        <local:TrackVisual Grid.Column="2"/>
                        <local:TrackVisual Grid.Column="3"/>
                        <local:TrackVisual Grid.Column="4"/>
                        <local:TrackVisual Grid.Column="5"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            
        </Grid>
    </Border>
</local:VisualUnitControlBase>
