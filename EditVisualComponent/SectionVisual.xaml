<local:VisualUnitControlBase x:Class="PianoSimulator.EditVisualComponent.SectionVisual"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PianoSimulator.EditVisualComponent"
             mc:Ignorable="d"
             Height="360">
    <Border>
        <Grid>
            <Border ClipToBounds="True" BorderBrush="White" BorderThickness="0.1">
                <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden">
                    <StackPanel x:Name="Tracks" Orientation="Vertical">
                        <local:TrackVisual x:Name="Track0" Grid.Column="0"/>
                        <local:TrackVisual x:Name="Track1" Grid.Column="1"/>
                        <local:TrackVisual x:Name="Track2" Grid.Column="2"/>
                        <local:TrackVisual x:Name="Track3" Grid.Column="3"/>
                        <local:TrackVisual x:Name="Track4" Grid.Column="4"/>
                        <local:TrackVisual x:Name="Track5" Grid.Column="5"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

        </Grid>
    </Border>
</local:VisualUnitControlBase>
