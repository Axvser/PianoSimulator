<Window x:Class="PianoSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PianoSimulator"
        xmlns:mn="clr-namespace:MinimalisticWPF;assembly=MinimalisticWPF"
        mc:Ignorable="d"
        Title="MainWindow" 
        WindowStyle="None"
        Background="#1e1e1e"
        Height="540" 
        Width="960"
        Name="Main"
        ResizeMode="NoResize">
    <Viewbox>
        <Grid Width="{Binding ElementName=Main,Path=Width}"
              Height="{Binding ElementName=Main,Path=Height}">
            <mn:MTopBar VerticalAlignment="Top" Title="PianoSimulator"/>

        </Grid>
    </Viewbox>
</Window>
